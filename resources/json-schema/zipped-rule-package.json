{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://schema.mosparo.io/zipped-rule-package.json",
    "type": "object",
    "properties": {
        "lastUpdatedAt": {
            "type": "string"
        },
        "refreshInterval": {
            "type": "integer"
        },
        "rFiles": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "riFiles": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        }
    },
    "required": ["lastUpdatedAt", "refreshInterval", "rFiles", "riFiles"],
    "additionalProperties": false
}
