{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://schema.mosparo.io/splitted-rules-file.json",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "description": {
                "type": [
                    "string",
                    "null"
                ]
            },
            "type": {
                "type": "string"
            },
            "status": {
                "type": "boolean"
            },
            "numberOfItems": {
                "type": "integer"
            },
            "spamRatingFactor": {
                "type": "number"
            },
            "uuid": {
                "type": "string"
            }
        },
        "required": ["name", "type", "uuid"],
        "additionalProperties": false
    },
    "minItems": 1
}
